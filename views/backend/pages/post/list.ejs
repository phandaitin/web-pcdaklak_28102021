<% 
    const collection = 'post';    
    const linkIndex  = systemConfig.prefixAdmin + '/' + `${collection}`;
%>
 
  
    <!--  -->
    <div class="container-fluid px-4">
        <h1 class="mt-16px">Posts</h1>       
     <!--  -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i> List Posts                 
            </div>
            <div >              
              <a href="<%= linkIndex %>/add" type="button" class="btn btn-primary" style="float:right; margin-right: 16px;margin-top: -40px;" >Add New</a>
            </div>
            <!-- <form role="form" method ='POST' action="<%= linkIndex %>/status/<%= data.id %>?_method=PUT"  >  -->
                <div class="card-body">
                    <table id="datatablesSimple"  >
                        <thead>
                            <tr>
                                <th>#</th>                                
                                <th>Category</th>
                                <th>Name</th>                              
                                <th>Status</th>
                                <th>Author</th>
                                <th>CreatedAt</th>
                                <th   style="text-align: center" >Action</th>
                            </tr>
                        </thead>
                    
                        <tbody>                
                            <% for(let i = 0 ; i < data.length; i ++) { %>        
                                <tr>                                
                                    <td> <%= i + 1 %>  </td>                                    
                                    <td> <%= data[i].category %> </td>
                                    <td> <%= data[i].name.replace(/(<([^>]+)>)/igm,"").substr(0, 50) %> </td>                                    
                                    <td> 
                                        <form action="<%= linkIndex %>/status/<%= data[i].id %>/<%= data[i].status %>?_method=PUT" method="post">
                                            <% if (data[i].status =='active') { %> 
                                                <a><button type="submit" class="btn btn-success btn-sm">active </button></a>
                                            <% } else { %> 
                                                <a><button type="submit" class="btn btn-warning btn-sm">inactive </button></a>
                                            <% } %>   
                                        </form>    

                                    </td>
                                    <td> <%= data[i].author %> </td>
                                    <td> <%= moment(data[i].createdAt).format('DD/MM/YYYY') %> </td>                                                                        
                                    <td>
                                      <div  style=" font-size:15px; text-align: center">                                                                              
                                        <form action="<%= linkIndex %>/<%= data[i].id %>?_method=DELETE" method="post">
                                          <a href="<%= linkIndex %>/edit/<%= data[i].id %>" class ="btn btn-primary btn-sm" >   Edit      </a>
                                          <button type="submit" class ="btn btn-danger btn-sm"
                                              onclick="return confirm('Are you sure you want to delete this item?') "
                                          > Delete</button>
                                        </form>                                    
                                      </div>
                                    </td>                                    
                                </tr>
                            <% } %>                            
                        </tbody>
                    </table>
                </div>        
                <!-- confirm delete  -->


                  
                <!-- confir delete  -->
                
        </div>  
    </div>
  
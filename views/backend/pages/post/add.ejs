<% 
  const collection = 'post';    
  const linkIndex  = systemConfig.prefixAdmin + '/' + `${collection}`;
%>
    <div class="container-fluid px-4">
        <h1 class="mt-1">Add Posts</h1>               
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>  Form Posts                 
            </div> 
            
            <form role="form" action="<%= linkIndex %>/save"  method ="POST"  enctype="multipart/form-data"  >
              <!-- <form role="form" action="<%= linkIndex %>/save"  method ="POST" > -->
              <div class="card-body">
                <%- include('./../../elements/msgError')%>  
             
               <div class="form-group row mb-2 "> 
                  <label class="col-sm-2 col-form-label"> Category</label>
                  <div class="col-sm-10">                      
                    <select name="category" class="form-control" >          
                      <% for(let i =0 ; i < dataMain.length; i ++)  { %>              
                        <option > <%= dataMain[i].name %></option>
                      <% } %>
                    </select>  
                  </div>
                </div>

                <div class="form-group row mb-2 "> 
                  <label class="col-sm-2 col-form-label"> Post name</label>
                  <div class="col-sm-10">                      
                    <input type="text" class="form-control" name="name" value ="<%= data.name %>"  >
                  </div>
                </div>

                <div class="form-group row mb-2 "> 
                  <label class="col-sm-2 col-form-label"> Post title</label>
                  <div class="col-sm-10">                      
                    <textarea class="form-control" name="title" rows="2" > <%= data.title %> </textarea>
                  </div>
                </div> 

                <div class="form-group row mb-2 "> 
                  <label class="col-sm-2 col-form-label"> Upload Thumbnail</label>
                  <div class="col-sm-10">                      
                    <input type="file" class="form-control" name="thumb" value ='<%= data.thumb %>' >
                  </div>
                </div>



                <div class="form-group mb-2 "> 
                  <div class="col-sm ">                      
                    <textarea class="form-control" name="content" rows="2"  id="editor1" >  <%= data.content %> </textarea>
                    <script>
                      var editor =   CKEDITOR.replace( 'editor1' );
                    </script>
                  </div>
                </div>

                <div class="form-group mb-2"   style="float: right">
                  <a href="<%= linkIndex %>" class="btn btn-danger">Cancel</a> &nbsp
                  <button type="submit" class="btn btn-primary">Submit</button>
                </divclass=>

              </div>
            </form>    
        </div> 
 
    </div>
 